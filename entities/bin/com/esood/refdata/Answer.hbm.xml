<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.esood.refdata.Answer" table="ANSWER">
	    <id name="id" type="java.lang.Integer" column="ID">
        	<generator class="native" />
		</id>
    <property name="answerCode" type="java.lang.String" column="CODE"/>
    <property name="answerText" type="java.lang.String" column="ANSWER_TEXT" />
    </class>
</hibernate-mapping>